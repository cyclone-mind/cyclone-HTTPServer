CompileFlags:
    Add:
        - -I/usr/include
        - -I/usr/local/include
        - -I/opt/vcpkg/installed/x64-linux/include
        - -std=c++17
    Remove:
        - -Werror

Diagnostics:
    ClangTidy:
        Add:
            - modernize-*
            - performance-*
            - readability-*

InlayHints:
    Enabled: true
    ParameterNames: true
    DeducedTypes: true

Hover:
    ShowAKA: true